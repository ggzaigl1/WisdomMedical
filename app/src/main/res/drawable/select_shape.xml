<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <layer-list>
            <item android:drawable="@color/lineColor"/>
            <item android:drawable="@color/mainColor" android:bottom="1dp"/>
            <item android:drawable="@color/white" android:left="4dp" android:bottom="0.5dp"/>
        </layer-list>
    </item>
    <item android:state_checked="true">
        <layer-list>
            <item android:drawable="@color/lineColor"/>
            <item android:drawable="@color/mainColor" android:bottom="1dp"/>
            <item android:drawable="@color/white" android:left="4dp" android:bottom="0.5dp"/>
        </layer-list>
    </item>

    <item android:state_selected="true">
        <layer-list>
            <item android:drawable="@color/lineColor"/>
            <item android:drawable="@color/mainColor" android:bottom="1dp"/>
            <item android:drawable="@color/white" android:left="4dp" android:bottom="0.5dp"/>
        </layer-list>
    </item>

    <item>
        <shape android:shape="rectangle">
            <stroke android:width="0.5dp" android:color="@color/lineColor"/>
            <solid android:drawable="@color/item_bg"/>
        </shape>
    </item>

</selector>