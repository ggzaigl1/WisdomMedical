<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

    <include layout="@layout/base_activity_head"/>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:scrollbars="none">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <LinearLayout
                    android:id="@+id/Ll_user"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_12">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:drawableStart="@drawable/svg_add_user"
                        android:drawablePadding="10dp"
                        android:textSize="15sp"
                        android:textColor="@color/txtSuperColor"
                        android:text="@string/add_user"/>

                <TextView
                        android:id="@+id/tv_add_user_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="right|center_vertical"
                        android:background="@null"
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/txtLight"
                        android:drawableEnd="@mipmap/icon_right_sensory"/>
            </LinearLayout>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/lineColor"/>

            <LinearLayout
                    android:id="@+id/Ll_type_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_44"
                    android:padding="@dimen/dp_12"
                    >

                <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:drawableStart="@drawable/svg_add_user_type"
                        android:drawablePadding="10dp"
                        android:textSize="15sp"
                        android:textColor="@color/txtSuperColor"
                        android:text="@string/add_type_no"/>

                <TextView
                        android:id="@+id/tv_add_user_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textColor="@color/txtLight"
                        android:textSize="@dimen/sp_14"
                        android:drawableEnd="@mipmap/icon_right_sensory"/>
            </LinearLayout>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/lineColor"/>


            <LinearLayout
                    android:id="@+id/Ll_No"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_12">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:drawableStart="@drawable/svg_add_user_no"
                        android:drawablePadding="10dp"
                        android:textSize="15sp"
                        android:textColor="@color/txtSuperColor"
                        android:text="@string/add_No"/>

                <TextView
                        android:id="@+id/tv_add_user_no"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="right|center_vertical"
                        android:background="@null"
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/txtLight"
                        android:drawableEnd="@mipmap/icon_right_sensory"/>
            </LinearLayout>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/lineColor"/>


            <LinearLayout
                    android:id="@+id/Ll_sex"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_12"
                    >

                <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/svg_add_user_sex"
                        android:drawablePadding="10dp"
                        android:textSize="15sp"
                        android:textColor="@color/txtSuperColor"
                        android:text="@string/add_sex"/>

                <TextView
                        android:id="@+id/tv_sex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textColor="@color/txtLight"
                        android:textSize="@dimen/sp_14"
                        android:drawableEnd="@mipmap/icon_right_sensory"/>
            </LinearLayout>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/lineColor"/>


            <LinearLayout
                    android:id="@+id/Ll_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_22"
                    android:padding="@dimen/dp_12"
                    >

                <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:drawableStart="@drawable/svg_date_add_user"
                        android:drawablePadding="10dp"
                        android:textSize="15sp"
                        android:textColor="@color/txtSuperColor"
                        android:text="@string/add_date"/>

                <TextView
                        android:id="@+id/tv_Date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textColor="@color/txtLight"
                        android:textSize="@dimen/sp_14"
                        android:drawableEnd="@mipmap/icon_right_sensory"/>
            </LinearLayout>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/lineColor"/>


            <LinearLayout
                    android:id="@+id/Ll_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_12"
                    >

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:drawableStart="@drawable/svg_add_user_phone"
                        android:drawablePadding="10dp"
                        android:textSize="15sp"
                        android:textColor="@color/txtSuperColor"
                        android:text="@string/add_phone"/>

                <TextView
                        android:id="@+id/tv_add_user_phone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="right|center_vertical"
                        android:background="@null"
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/txtLight"
                        android:drawableEnd="@mipmap/icon_right_sensory"/>

            </LinearLayout>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/lineColor"/>


            <LinearLayout
                    android:id="@+id/Ll_isMarried"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_12"
                    >

                <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:drawableStart="@drawable/svg_love"
                        android:drawablePadding="10dp"
                        android:textSize="15sp"
                        android:textColor="@color/txtSuperColor"
                        android:text="@string/add_isMarried"/>

                <TextView
                        android:id="@+id/tv_isMarried"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textColor="@color/txtLight"
                        android:textSize="@dimen/sp_14"
                        android:drawableEnd="@mipmap/icon_right_sensory"/>
            </LinearLayout>
            <LinearLayout
                    android:id="@+id/Ll_relationship"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_12"
                    >

                <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:drawableStart="@drawable/svg_relationship_add_user"
                        android:drawablePadding="10dp"
                        android:textSize="15sp"
                        android:textColor="@color/txtSuperColor"
                        android:text="@string/add_relationship"/>

                <TextView
                        android:id="@+id/tv_relationship"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textColor="@color/txtLight"
                        android:textSize="@dimen/sp_14"
                        android:drawableEnd="@mipmap/icon_right_sensory"/>
            </LinearLayout>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/lineColor"/>


            <LinearLayout
                    android:id="@+id/Ll_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_12"
                    >

                <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:drawableStart="@drawable/svg_add_user_city"
                        android:drawablePadding="10dp"
                        android:textSize="15sp"
                        android:textColor="@color/txtSuperColor"
                        android:text="@string/add_city"/>

                <TextView
                        android:id="@+id/tv_city"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textColor="@color/txtLight"
                        android:textSize="@dimen/sp_14"
                        android:drawableEnd="@mipmap/icon_right_sensory"/>
            </LinearLayout>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/lineColor"/>


            <LinearLayout
                    android:id="@+id/Rl_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_12"
                    >

                <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:drawableStart="@drawable/svg_location_add_user"
                        android:drawablePadding="10dp"
                        android:drawableEnd="@mipmap/icon_right_sensory"
                        android:textSize="15sp"
                        android:textColor="@color/txtSuperColor"
                        android:text="@string/add_location"/>

            </LinearLayout>

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_12">

                <TextView
                        android:id="@+id/tv_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|left"
                        android:textColor="@color/txtLight"
                        android:maxLines="2"
                        android:textSize="@dimen/sp_14"
                        android:background="@null"
                        tools:ignore="RtlHardcoded"/>
            </RelativeLayout>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/lineColor"/>


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_12"
                    >

                <CheckBox
                        android:id="@+id/cb_check"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:checked="false"
                        android:button="@drawable/select_add_user_rb"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:drawablePadding="10dp"
                        android:textSize="15sp"
                        android:textColor="@color/txtSuperColor"
                        android:text="@string/set_default_caller"/>
            </LinearLayout>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/lineColor"/>

            <Button
                    android:id="@+id/bt_add_user"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_45"
                    android:layout_marginTop="@dimen/dp_40"
                    android:background="@drawable/shape_login_bg"
                    android:layout_margin="30dp"
                    android:text="@string/complete"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_18"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>