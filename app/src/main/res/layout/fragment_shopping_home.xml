<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <EditText
            android:id="@+id/et_search_heat"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_35"
            android:background="@drawable/shape_search_bg"
            android:imeOptions="actionSearch"
            android:hint="请输入商品名称"
            android:padding="@dimen/dp_8"
            android:textCursorDrawable="@null"
            android:cursorVisible="false"
            android:textColor="@color/txtSecondColor"
            android:textSize="@dimen/sp_12"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:inputType="text"/>


    <android.support.v7.widget.AppCompatImageView
            android:layout_width="@dimen/dp_17"
            android:layout_height="@dimen/dp_17"
            app:srcCompat="@drawable/vector_search"
            android:layout_marginEnd="@dimen/dp_16"
            app:layout_constraintRight_toRightOf="@id/et_search_heat"
            app:layout_constraintTop_toTopOf="@+id/et_search_heat"
            app:layout_constraintBottom_toBottomOf="@+id/et_search_heat"/>

    <android.support.v7.widget.RecyclerView
            android:layout_marginTop="@dimen/dp_16"
            android:id="@+id/home_recycle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_search_heat"/>
</android.support.constraint.ConstraintLayout>