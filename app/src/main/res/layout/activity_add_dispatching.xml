<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

    <include layout="@layout/base_activity_head"/>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <LinearLayout
                    android:id="@+id/Ll_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_10">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:drawablePadding="10dp"
                        android:textSize="@dimen/sp_16"
                        android:textColor="@color/txtSuperColor"
                        android:text="@string/consignee"/>

                <TextView
                        android:id="@+id/tv_add_user_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:textSize="@dimen/sp_16"
                        android:textColor="@color/txtSuperColor"
                        android:gravity="right"
                        />

            </LinearLayout>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:background="@color/lineColor"/>


            <LinearLayout
                    android:id="@+id/Ll_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_10"
                    >

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:drawablePadding="10dp"
                        android:textSize="@dimen/sp_16"
                        android:textColor="@color/txtSuperColor"
                        android:text="@string/add_phone"/>


                <TextView
                        android:id="@+id/tv_add_user_phone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:textSize="@dimen/sp_16"
                        android:gravity="right"
                        android:textColor="@color/txtSuperColor"
                        tools:ignore="TextFields"/>

            </LinearLayout>
            <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:background="@color/lineColor"/>


            <LinearLayout
                    android:id="@+id/Ll_postcode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_10"
                    >

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:drawablePadding="10dp"
                        android:textSize="@dimen/sp_16"
                        android:textColor="@color/txtSuperColor"
                        android:text="@string/add_postcode"/>


                <TextView
                        android:id="@+id/tv_add_user_postcode"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:textSize="@dimen/sp_16"
                        android:gravity="right"
                        android:textColor="@color/txtSuperColor"
                        tools:ignore="TextFields"/>

            </LinearLayout>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:background="@color/lineColor"/>

            <LinearLayout
                    android:id="@+id/Ll_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_10"
                    >

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:drawablePadding="10dp"
                        android:layout_marginEnd="5dp"
                        android:textSize="@dimen/sp_16"
                        android:textColor="@color/txtSuperColor"
                        android:text="@string/area"/>

                <TextView
                        android:id="@+id/tv_city"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|right"
                        android:text="@string/please_select"
                        android:textColor="@color/txtSuperColor"
                        android:textSize="@dimen/sp_16"
                        android:drawableEnd="@mipmap/icon_right_sensory"/>
            </LinearLayout>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:background="@color/lineColor"/>

            <LinearLayout
                    android:id="@+id/Ll_address"
                    android:layout_width="match_parent"
                    android:layout_height="84dp"
                    android:padding="@dimen/dp_10"
                    >

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="10dp"
                        android:textSize="@dimen/sp_16"
                        android:textColor="@color/txtLight"
                        android:text="@string/add_location"/>

                <TextView
                        android:id="@+id/tv_location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:gravity="right"
                        android:maxLines="4"
                        android:maxLength="50"
                        android:ellipsize="end"
                        android:textSize="@dimen/sp_16"
                        android:textColor="@color/txtLight"
                        />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>