<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical"
              tools:context=".ui.home.activity.PhyExamDataActivity">

    <include layout="@layout/base_activity_head"/>

    <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_12">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="身高(cm)"
                        android:textColor="#99aabe"
                        android:textSize="@dimen/dp_16"/>

                <EditText
                        android:id="@+id/et_height"
                        android:layout_width="@dimen/dp_200"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dp_12"
                        android:background="@null"
                        android:gravity="right"
                        android:inputType="numberDecimal"
                        android:textColor="#99aabe"
                        android:textCursorDrawable="@null"
                        android:textSize="@dimen/dp_16"/>

            </RelativeLayout>

            <include layout="@layout/line_vertical"/>

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_12">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="体重(kg)"
                        android:textColor="#99aabe"
                        android:textSize="@dimen/dp_16"/>

                <EditText
                        android:id="@+id/et_weight"
                        android:layout_width="@dimen/dp_200"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dp_12"
                        android:background="@null"
                        android:gravity="right"
                        android:inputType="numberDecimal"
                        android:textColor="#99aabe"
                        android:textCursorDrawable="@null"
                        android:textSize="@dimen/dp_16"/>

            </RelativeLayout>

            <include layout="@layout/line_vertical"/>

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_12">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="腰围(cm)"
                        android:textColor="#99aabe"
                        android:textSize="@dimen/dp_16"/>

                <EditText
                        android:id="@+id/et_waist"
                        android:layout_width="@dimen/dp_200"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dp_12"
                        android:background="@null"
                        android:gravity="right"
                        android:inputType="numberDecimal"
                        android:textColor="#99aabe"
                        android:textCursorDrawable="@null"
                        android:textSize="@dimen/dp_16"/>

            </RelativeLayout>

            <include layout="@layout/line_vertical"/>

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_12">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="心率(次/分)"
                        android:textColor="#99aabe"
                        android:textSize="@dimen/dp_16"/>

                <EditText
                        android:id="@+id/et_heartDate"
                        android:layout_width="@dimen/dp_200"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dp_12"
                        android:background="@null"
                        android:gravity="right"
                        android:inputType="numberDecimal"
                        android:textColor="#99aabe"
                        android:textCursorDrawable="@null"
                        android:textSize="@dimen/dp_16"/>

            </RelativeLayout>

            <include layout="@layout/line_vertical"/>

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_12">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="收缩压(高压)(mmHg)"
                        android:textColor="#99aabe"
                        android:textSize="@dimen/dp_16"/>

                <EditText
                        android:id="@+id/et_highPressure"
                        android:layout_width="@dimen/dp_200"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dp_12"
                        android:background="@null"
                        android:gravity="right"
                        android:inputType="numberDecimal"
                        android:textColor="#99aabe"
                        android:textCursorDrawable="@null"
                        android:textSize="@dimen/dp_16"/>

            </RelativeLayout>

            <include layout="@layout/line_vertical"/>

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_12">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="舒张压(低压)(mmHg)"
                        android:textColor="#99aabe"
                        android:textSize="@dimen/dp_16"/>

                <EditText
                        android:id="@+id/et_lowPressure"
                        android:layout_width="@dimen/dp_200"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dp_12"
                        android:background="@null"
                        android:gravity="right"
                        android:inputType="numberDecimal"
                        android:textColor="#99aabe"
                        android:textCursorDrawable="@null"
                        android:textSize="@dimen/dp_16"/>

            </RelativeLayout>

            <include layout="@layout/line_vertical"/>

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_12">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="空腹血糖(GLU)(mmol/L)"
                        android:textColor="#99aabe"
                        android:textSize="@dimen/dp_16"/>

                <EditText
                        android:id="@+id/et_bloodSugar"
                        android:layout_width="@dimen/dp_200"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="@dimen/dp_12"
                        android:background="@null"
                        android:gravity="right"
                        android:inputType="numberDecimal"
                        android:textColor="#99aabe"
                        android:textCursorDrawable="@null"
                        android:textSize="@dimen/dp_16"/>

            </RelativeLayout>

            <include layout="@layout/line_vertical"/>

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_12">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="总胆固醇(TC)(mmol/L)"
                        android:textColor="#99aabe"
                        android:textSize="@dimen/dp_16"/>

                <EditText
                        android:id="@+id/et_totalCholesterol"
                        android:layout_width="@dimen/dp_200"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dp_12"
                        android:background="@null"
                        android:gravity="right"
                        android:inputType="numberDecimal"
                        android:textColor="#99aabe"
                        android:textCursorDrawable="@null"
                        android:textSize="@dimen/dp_16"/>

            </RelativeLayout>

            <include layout="@layout/line_vertical"/>

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_12">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="甘油三酯(TG)(mmol/L)"
                        android:textColor="#99aabe"
                        android:textSize="@dimen/dp_16"/>

                <EditText
                        android:id="@+id/et_triglyceride"
                        android:layout_width="@dimen/dp_200"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dp_12"
                        android:background="@null"
                        android:gravity="right"
                        android:inputType="numberDecimal"
                        android:textColor="#99aabe"
                        android:textCursorDrawable="@null"
                        android:textSize="@dimen/dp_16"/>

            </RelativeLayout>

            <include layout="@layout/line_vertical"/>

            <Button
                    android:id="@+id/bt_save"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_45"
                    android:layout_marginBottom="@dimen/dp_36"
                    android:layout_marginLeft="@dimen/dp_30"
                    android:layout_marginRight="@dimen/dp_30"
                    android:layout_marginTop="@dimen/dp_60"
                    android:background="@drawable/shape_login_bg"
                    android:text="@string/save"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_18"/>
        </LinearLayout>

    </ScrollView>


</LinearLayout>