<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ui.personal.activity.PersonInfoActivity">

    <include layout="@layout/base_activity_head" />


    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/iv_header"
        android:layout_width="84dp"
        android:layout_height="84dp"
        android:layout_gravity="center"
        android:background="@mipmap/icon_doctor" />


    <LinearLayout
        android:id="@+id/Ll_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_12">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/username"
            android:textColor="#afb2c4"
            android:textSize="@dimen/dp_16" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_15"
            android:layout_weight="2"
            android:gravity="right"
            android:textColor="@color/txtSuperColor"
            android:textSize="@dimen/dp_16" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/lineColor" />

    <LinearLayout
        android:id="@+id/rl_sex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_12">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/add_sex"
            android:textColor="#afb2c4"
            android:textSize="@dimen/dp_16" />

        <TextView
            android:id="@+id/tv_sex"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:drawableEnd="@drawable/svg_right_arrow"
            android:gravity="right"
            android:textColor="@color/txtSuperColor"
            android:textSize="@dimen/dp_16"
            tools:ignore="SpUsage,UnknownIdInLayout" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/lineColor" />

    <LinearLayout
        android:id="@+id/Ll_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_12">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/add_phone"
            android:textColor="#afb2c4"
            android:textSize="@dimen/dp_16" />

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_15"
            android:layout_weight="2"
            android:gravity="right"
            android:textColor="@color/txtSuperColor"
            android:textSize="@dimen/dp_16" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/rl_record"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_12">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/add_record"
            android:textColor="#afb2c4"
            android:textSize="@dimen/dp_16" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:drawableEnd="@drawable/svg_right_arrow"
            android:gravity="right"
            android:textColor="@color/txtSuperColor"
            android:textSize="@dimen/dp_16"
            tools:ignore="SpUsage,UnknownIdInLayout" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/lineColor" />

    <LinearLayout
        android:id="@+id/Ll_address"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="@dimen/dp_12">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/reside_location"
            android:textColor="#afb2c4"
            android:textSize="@dimen/dp_16" />

        <TextView
            android:layout_marginEnd="@dimen/dp_15"
            android:id="@+id/tv_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@null"
            android:ellipsize="end"
            android:gravity="right"
            android:maxLines="2"
            android:textColor="@color/txtSuperColor"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/dp_16" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/lineColor" />

</LinearLayout>