<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_16">

    <android.support.v7.widget.AppCompatImageView
            android:id="@+id/iv_mall_home_pdSmallPic"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_100"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintWidth_percent="0.35"/>

    <TextView
            android:id="@+id/tv_mall_home_pdSign"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textColor="#909090"
            android:textSize="@dimen/sp_13"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintWidth_percent="0.6"/>

    <TextView
            android:id="@+id/tv_mall_home_pdCom"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="#4C3A30"
            android:textSize="@dimen/sp_15"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_mall_home_pdSign"
            app:layout_constraintWidth_percent="0.6"/>

    <TextView
            android:id="@+id/tv_mall_home_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textColor="#6472DF"
            android:textSize="@dimen/sp_20"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_mall_home_pdCom"
            app:layout_constraintWidth_percent="0.6"/>


    <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_mall_home_buy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/mall_home_buy_bg"
            android:paddingLeft="@dimen/dp_10"
            android:paddingTop="@dimen/dp_4"
            android:paddingRight="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_4"
            android:text="立即购买"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_13"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_mall_home_price"/>

</android.support.constraint.ConstraintLayout>