<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white">

    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="180dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp">

        <com.hjy.wisdommedical.widget.WaveView
                android:id="@+id/wave_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        <android.support.v7.widget.AppCompatImageView
                android:id="@+id/imgChatUser"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                app:srcCompat="@mipmap/icon_doctor"/>

    </RelativeLayout>


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView
                android:id="@+id/tv_docName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="医生"
                android:textSize="@dimen/sp_18"
                android:textColor="@color/txtSuperColor"/>
    </LinearLayout>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="@dimen/dp_50"
            android:orientation="vertical">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/waiting_doctor"
                android:textSize="@dimen/sp_18"
                android:layout_centerHorizontal="true"
                android:textColor="@color/txtSecondColor"/>

        <Button
                android:id="@+id/bt_wait"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_100"
                android:layout_marginRight="@dimen/dp_30"
                android:background="@drawable/shape_login_bg"
                android:text="@string/cancel_waiting"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_18"/>

    </RelativeLayout>

</LinearLayout>
