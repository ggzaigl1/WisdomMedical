<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/Ll_hand"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:background="@color/white">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_12">

        <TextView
                android:id="@+id/tv_order"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="@color/txtSuperColor"
                android:textSize="@dimen/sp_14"/>

        <TextView
                android:id="@+id/tv_delStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/txtSuperColor"
                android:textSize="@dimen/sp_14"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@color/white">

        <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                />
    </LinearLayout>

    <LinearLayout
            android:id="@+id/rl_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_15"
            android:orientation="vertical">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right">

            <TextView
                    android:id="@+id/tv_allPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:textColor="#FF333333"
                    android:textSize="@dimen/sp_12"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <View
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"/>

            <TextView
                    android:id="@+id/tv_left"
                    android:layout_width="70dp"
                    android:layout_height="26dp"
                    android:layout_marginEnd="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@drawable/shape_order_again"
                    android:gravity="center"
                    android:textColor="#FF999999"
                    android:textSize="@dimen/sp_14"/>

            <TextView
                    android:id="@+id/tv_right"
                    android:layout_width="70dp"
                    android:layout_height="26dp"
                    android:layout_marginEnd="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@drawable/shape_order_evaluate"
                    android:gravity="center"
                    android:textColor="@color/mainColor"
                    android:textSize="@dimen/sp_14"/>

        </LinearLayout>

    </LinearLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/lineColor"/>

</LinearLayout>